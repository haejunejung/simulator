{
  "compilerOptions": {
    // "types": ["jest"],
    "module": "CommonJS",
    "allowJs": true,
    "declaration": true,
    "target": "ES5",
    "outDir": "./dist",
    "rootDir": "./",
    "moduleResolution": "Node",
    "lib": ["ES2015", "DOM", "DOM.Iterable"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "paths": {
      "@root/*": ["./*"],
      "@src/*": ["src/*"],
      "@utils/*": ["src/utils/*"],
      "@simulator/*": ["src/simulator/*"]
    }
  },
  "include": ["./src/**/*.ts", "./tests/**/*.ts"],
  "files": ["index.ts"],
  "exclude": ["node_modules", "dist", ".github"]
}
